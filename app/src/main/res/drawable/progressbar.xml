<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/background">
        <shape>
            <gradient
                android:angle="270"
                android:startColor="@color/pg1"
                android:centerColor="@color/pg2"
                android:endColor="@color/pg3"
                android:centerY="1.0"/>
                    <corners android:radius="10dp"/>
        </shape>
    </item>

    <item android:id="@+id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/pg4"
                    android:endColor="@color/pg5"
                    android:useLevel="false"/>
                        <corners android:radius="10dp"/>
            </shape>
        </clip>


    </item>
</layer-list>